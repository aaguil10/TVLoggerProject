<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ancor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        app:fabSize="normal" />

    <!--BTN 1-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floting_action_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_black_24dp"
        app:backgroundTint="@color/PrimaryColor"
        android:layout_marginBottom="25dp"
        app:layout_constraintRight_toRightOf="@id/ancor"
        app:layout_constraintLeft_toLeftOf="@id/ancor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fabSize="mini" />

    <android.support.v7.widget.CardView
        android:id="@+id/floting_action_btn1_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/floting_action_btn1"
        app:layout_constraintBottom_toBottomOf="@id/floting_action_btn1"
        app:layout_constraintRight_toLeftOf="@id/floting_action_btn1"
        app:cardBackgroundColor="?BackgoundColor"
        app:cardCornerRadius="4dp"
        android:visibility="gone"
        android:layout_marginRight="24dp"
        >
        <TextView
            android:id="@+id/floting_action_btn1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="Tacos"/>
    </android.support.v7.widget.CardView>

    <!--BTN 2-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floting_action_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_black_24dp"
        app:backgroundTint="@color/PrimaryColor"
        android:layout_marginBottom="25dp"
        app:layout_constraintRight_toRightOf="@id/ancor"
        app:layout_constraintLeft_toLeftOf="@id/ancor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fabSize="mini" />

    <android.support.v7.widget.CardView
        android:id="@+id/floting_action_btn2_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/floting_action_btn2"
        app:layout_constraintBottom_toBottomOf="@id/floting_action_btn2"
        app:layout_constraintRight_toLeftOf="@id/floting_action_btn2"
        app:cardBackgroundColor="?BackgoundColor"
        app:cardCornerRadius="4dp"
        android:visibility="gone"
        android:layout_marginRight="24dp"
        >
        <TextView
            android:id="@+id/floting_action_btn2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="Pollo"/>
    </android.support.v7.widget.CardView>

    <!--BTN 3-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floting_action_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_black_24dp"
        app:backgroundTint="@color/PrimaryColor"
        android:layout_marginBottom="25dp"
        app:layout_constraintRight_toRightOf="@id/ancor"
        app:layout_constraintLeft_toLeftOf="@id/ancor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fabSize="mini" />

    <android.support.v7.widget.CardView
        android:id="@+id/floting_action_btn3_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/floting_action_btn3"
        app:layout_constraintBottom_toBottomOf="@id/floting_action_btn3"
        app:layout_constraintRight_toLeftOf="@id/floting_action_btn3"
        app:cardBackgroundColor="?BackgoundColor"
        app:cardCornerRadius="4dp"
        android:visibility="gone"
        android:layout_marginRight="24dp"
        >
        <TextView
            android:id="@+id/floting_action_btn3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="Pollo"/>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>